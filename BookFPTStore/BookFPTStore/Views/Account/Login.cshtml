@model ViewClient
@section Css {
	<style>

		.mb-70 {
			margin-bottom: 70px;
			
		}

		#design .container h2 {
			color: #F4801A;
			font-size: 24px;
			font-weight: 800;
		}
	</style>
   }
<section id="" class="mb-70">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control" placeholder="Enter Username...">
							<span asp-validation-for="Username" class="text-danger"> </span>
						</div>

						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" placeholder="Enter Password...">
							<span asp-validation-for="Password" class="text-danger"> </span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Login</button>
						</div>
						<a asp-action="Create" asp-controller="Account">Not Account? Signup Now</a>
					</form>
				</div><!--/login form-->
			</div>

		</div>
	</div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}