@model TbUser
@section Css {
	<style>

		.mb-70 {
			margin-bottom: 70px;
		}

		#design .container h2 {
			color: #F4801A;
			font-size: 24px;
			font-weight:800;
		}
	</style>
   }
<section id="design" class="mb-70">
	<!--form-->
	<div class="container">
		<div class="row">

			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>New User Signup!</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Create" asp-controller="Account">
						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control" placeholder="Enter Username...">
							<span asp-validation-for="Username" class="text-danger"> </span>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" class="form-control" placeholder="Enter Email...">
							<span asp-validation-for="Email" class="text-danger"> </span>
						</div>

						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" placeholder="Enter Password...">
							<span asp-validation-for="Password" class="text-danger"> </span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Signup</button>
						</div>
						
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}